---
import Layout from '../layouts/Layout.astro'
import RecipeCard from '../components/RecipeCard.astro'

const allSnacks = await Astro.glob('./snack/*.md')
---

<Layout title="Snack">
  <h1>ğŸª Snack</h1>
  <p class="size-20">Wie zegt dat snacken niet gezond en lekker kan zijn? Let's go!</p>
  <ul class="recipes">
    {allSnacks.map((snack) => (
      <RecipeCard href={snack.url}>
        {snack.frontmatter.title}
      </RecipeCard>
    ))}
  </ul>
</Layout>